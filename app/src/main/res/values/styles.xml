<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.OsmAndEUCWorld" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/background_surface</item>
    </style>
    
    <!-- Large text for HUD-style battery display -->
    <style name="TextStyle.Battery" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/battery_good</item>
    </style>
    
    <style name="TextStyle.Voltage" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Wheel name/model display (left side of line 1) -->
    <style name="TextStyle.WheelName" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Wheel serial/ID display (right side of line 1) -->
    <style name="TextStyle.WheelSerial" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextStyle.Metric" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextStyle.MetricValue" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">31sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextStyle.Label" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Card style -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    
    <!-- Widget text styles -->
    <style name="Widget.Battery" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/widget_text</item>
    </style>
    
    <style name="Widget.Voltage" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/widget_text</item>
    </style>
</resources>
